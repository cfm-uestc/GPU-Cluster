@model GPUCluster.WebService.Models.ContainerViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Container</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContainerName" class="control-label"></label>
                <input asp-for="ContainerName" class="form-control" />
                <span asp-validation-for="ContainerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image.Tag" class="control-label"></label>
                <select asp-for="ImageID" class ="form-control" asp-items="ViewBag.Images"></select>
            </div>
            <div class="form-group">
                <label asp-for="Volume.Name" class="control-label"></label>
                <select asp-for="VolumeID" class ="form-control" asp-items="ViewBag.Volumes"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
